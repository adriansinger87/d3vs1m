<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - D3vS1m.Web</title>

    @* CSS settings *@
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/materialize/css/materialize.min.css" />
        <link rel="stylesheet" href="~/lib/mdi/css/materialdesignicons.min.css" />
        <link rel="stylesheet" href="~/css/formats.css" />
        <link rel="stylesheet" href="~/css/dark-theme.css"  />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/lib/materialize/css/materialize.min.css" />
        <link rel="stylesheet" href="~/lib/mdi/css/materialdesignicons.min.css" />
        <link rel="stylesheet" href="~/css/formats.css" />
        <link rel="stylesheet" href="~/css/dark-theme.css" />
    </environment>
</head>
<body>

    <script>
        HOST = '@Context.Request.Host';
        PATH = '@Url.Content("~/")';
    </script>

    <partial name="_Header" />
    <div class="container">
        @RenderBody()
    </div>
    <partial name="_Footer" />
    <partial name="_ConsoleModal" />

    @* JS lib settings *@

    <environment include="Development">
        <script src="~/lib/jquery/jquery.js"></script>
        <script src="~/lib/vue/vue.min.js"></script>
        <script src="~/lib/materialize/js/materialize.min.js"></script>
        <script src="~/lib/ace/ace.js"></script>
        <script src="~/lib/paho-mqtt/paho-mqtt.min.js"></script>
        <script src="~/js/lib.js"></script>
        <script src="~/js/lib.prototype.js"></script>
        <script src="~/js/main.js"></script>
        <script src="~/js/mqttClient.js"></script>
    </environment>

    <environment exclude="Development">
        <script src="~/lib/jquery/jquery.js"></script>
        <script src="~/lib/vue/vue.min.js"></script>
        <script src="~/lib/materialize/js/materialize.min.js"></script>
        <script src="~/lib/ace/ace.js"></script>
        <script src="~/lib/paho-mqtt/paho-mqtt.min.js"></script>
        <script src="~/js/lib.js"></script>
        <script src="~/js/lib.prototype.js"></script>
        <script src="~/js/main.js"></script>
        <script src="~/js/mqttClient.js"></script>
    </environment>

    @RenderSection("Scripts", required: false)

</body>
</html>
