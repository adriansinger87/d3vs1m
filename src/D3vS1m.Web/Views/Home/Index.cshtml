@{
    ViewData["Title"] = "Home";
}

@section Scripts {
    <script src="~/js/_home.js"></script>
}

<div id="app-vue" v-load>

    <div v-if="simulators" class="row">
        <div v-for="sim in simulators" class="col s12 m12 l6">
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                    <span class="card-title">{{ sim.name }}</span>
                    <p>
                        I am a description
                    </p>
                </div>
                <div class="card-action">
                    <a v-on:click="getArguments(sim.id)"><i class="mdi mdi-tune"></i></a>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Structure -->
    <div id="code-modal" class="modal">
        <div class="modal-content">
            <div id="ace-editor" class="code-editor"></div>
        </div>
        <div class="modal-footer code-footer">
            <a v-on:click="updateArguments(currentId)" class="modal-close waves-effect waves-green btn-flat">Send</a>
        </div>
    </div>


</div>