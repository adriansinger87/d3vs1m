@model ErrorResponse
@{
    ViewData["Page"] = "Error";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col s12">
        <h5>@ViewData["Title"] hat ein Problem festgestellt</h5>
    </div>
    <div class="col s12"><code>RequestId: @Model.RequestId</code></div>
    <div class="col s12"><code>StatusCode: @Model.StatusCode - @Model.StatusMessage</code></div>
</div>

@if (Model.Exception != null)
{
    var msg = Model.Exception.Message;
    var trace = Model.Exception.StackTrace.Replace(" at", "<br />at");

    <div class="row">
        <div class="col s12">Details:</div>
        <div class="col s12">
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                    <span class="card-title">@msg</span>
                    @Html.Raw(trace)
                </div>
            </div>
        </div>
    </div>
}